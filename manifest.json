{
  "manifest_version": 3,
  "name": "Gmail Filter Manager Button",
  "version": "0.2.4",
  "description": "Add a Filter Manager button to Gmail's toolbar",
  "icons": {
    "16": "icons/filter_16.png",
    "32": "icons/filter_32.png",
    "48": "icons/filter_48.png",
    "128": "icons/filter_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [],
  "default_locale": "en"
}
